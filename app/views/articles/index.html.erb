<ul class="nav nav-tabs">
	<li role="presentation" class="active"><a href="#">ホーム</a></li>
	<li role="presentation"><a href="#">メニューＡ</a></li>
	<li role="presentation"><a href="#">メニューＢ</a></li>
</ul>

<div class= "container-fluid">
	<div class="row">
		<div class="col-md-4">

          <h1>新規投稿</h1>

	      <%= form_for(@article) do |f| %>

	      <h4>タイトル</h4>
	      <%= f.text_field :title %>

	      <h4>本文</h4>
	      <%= f.text_area :body %>

	      <h4>天気</h4>
	      <%= f.text_field :weather %>

	      <h4>画像</h4>
	      <%= f.attachment_field :image %>

	      <%= f.submit '投稿' %>

          <% end %>
        </div>

		<div class="col-md-8">
		 <h1> 投稿一覧</h1>

		 <table class="table">
 		 <tr>
 		 <th align="center">タイトル</th>
 		 <th align="center">本文</th>
 		 <th align="center">天気</th>
 		 <th align="center">画像</th>
 		 </tr>

	 	 <% @articles.each do |article| %>

 	 	 <tr>
		 <td><%= link_to article.title, "/articles/#{article.id}"%></td>
		 <td><%= article.body%></td>
		 <td><%= article.weather%></td>
		 <td><%= attachment_image_tag article, :image, :fill, 100, 100, format: 'jpeg' %></td>
 	     </tr>
	     <% end %>
	     </table>
	 	</div>

	</div>
</div>