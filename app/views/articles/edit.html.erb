<h1>編集画面</h1>
<%= form_for(@article) do |f| %>

	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>本文</h4>
	<%= f.text_area :body %>
	<h4>天気</h4>
	<%= f.text_field :weather %>
	<%= f.submit '保存' %>
	<h4>画像</h4>
	<%= f.attachment_field :image %>

<% end %>

<%= link_to "一覧ページ" , "/articles/index" %>
<br><%= link_to "詳細ページ" , "/articles/#{@article.id}" %>

